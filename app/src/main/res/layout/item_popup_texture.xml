<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@color/lightorange1"
    android:id="@+id/texture_layout">

    <TextView
        android:id="@+id/title_texture_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/content_texture_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contenudesectiontest \n contenu de section text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_texture_popup"
        android:layout_margin="10dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>